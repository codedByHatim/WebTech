<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vehicle List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <div class="container">
    <h2 class="mb-4">All Vehicles</h2>
    <a href="/admin/vehicles/new" class="btn btn-primary mb-3">+ Add Vehicle</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Type</th>
          <th>Price ($)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% vehicles.forEach(vehicle => { %>
          <tr>
            <td><img src="<%= vehicle.image %>" width="100" /></td>
            <td><%= vehicle.name %></td>
            <td><%= vehicle.brand %></td>
            <td><%= vehicle.type %></td>
            <td><%= vehicle.price %></td>
            <td>
              <a href="/admin/vehicles/<%= vehicle._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/admin/vehicles/<%= vehicle._id %>/delete" method="POST" style="display:inline-block;">
                <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
